{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "fixedcontext" : "",
            "apache2modules" : [
                "headers",
                "proxy",
                "proxy_http",
                "proxy_wstunnel",
                "rewrite"
            ],

            "appconfigitems" : [
                {
                    "type"         : "tcpport",
                    "name"         : "mainport"
                },
                {
                    "type"         : "file",
                    "name"         : "${appconfig.apache2.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "directory",
                    "name"         : "/var/lib/mattermost/${appconfig.appconfigid}",
                    "uname"        : "mattermost",
                    "gname"        : "mattermost"
                },
                {
                    "type"         : "directory",
                    "name"         : "/var/lib/mattermost/${appconfig.appconfigid}/data",
                    "uname"        : "mattermost",
                    "gname"        : "mattermost",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "datadir"
                },
                {
                    "type"         : "file",
                    "name"         : "/etc/mattermost/${appconfig.appconfigid}.json",
                    "template"     : "tmpl/config.json.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "perlscript",
                    "source"       : "bin/ensure-logfile.pl"
                },
                {
                    "type"         : "systemd-service",
                    "name"         : "mattermost@${appconfig.appconfigid}",
                },
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"             : "database",
                    "name"             : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges"       : "all privileges"
                }
            ],
            "upgraders" : [
                {
                    "name"   : "maindb",
                    "type"   : "sqlscript",
                    "source" : "sql/fix-3.2-to-3.4-upgrade.sql"
                }
            ]
        }
    },
    "customizationpoints" : {
        "title" : {
            "type"        : "string",
            "required"    : false,
            "default" : {
                "value" : "Mattermost"
            }
        },
        "at_rest_encrypt_key" : {
            "type"        : "string",
            "required"    : false,
            "private"     : true,
            "default" : {
                "expression" : "${randomPassword(32)}"
            }
        },
        "public_link_salt" : {
            "type"        : "string",
            "required"    : false,
            "private"     : true,
            "default" : {
                "expression" : "${randomPassword(32)}"
            }
        },
        "invite_salt" : {
            "type"        : "string",
            "required"    : false,
            "private"     : true,
            "default" : {
                "expression" : "${randomPassword(32)}"
            }
        },
        "password_reset_salt" : {
            "type"        : "string",
            "required"    : false,
            "private"     : true,
            "default" : {
                "expression" : "${randomPassword(32)}"
            }
        },
        "terms_of_service_link" : {
            "type"        : "url",
            "required"    : false,
            "default" : {
                "expression" : "https://about.mattermost.com/default-terms/"
            }
        },
        "privacy_policy_link" : {
            "type"        : "url",
            "required"    : false,
            "default" : {
                "expression" : "https://about.mattermost.com/default-privacy-policy/"
            }
        },
        "about_link" : {
            "type"        : "url",
            "required"    : false,
            "default" : {
                "expression" : "https://about.mattermost.com/default-about/"
            }
        },
        "help_link" : {
            "type"        : "url",
            "required"    : false,
            "default" : {
                "expression" : "https://about.mattermost.com/default-help/"
            }
        },
        "report_a_problem_link" : {
            "type"        : "url",
            "required"    : false,
            "default" : {
                "expression" : "https://about.mattermost.com/default-report-a-problem/"
            }
        },
        "support_email" : {
            "type"        : "string",
            "required"    : false,
            "default" : {
                "expression" : "feedback@mattermost.com"
            }
        }
    }
}
